<%= render partial: "items/header" %>

  <div class="user_item">
   <% @items.each do |item| %>
    <div class="img_box">
    <p><%= image_tag "#{item.image}", :width=> "180" %></p>
    </div>
    <p class= "item_text"><%= item.item_name %></p>
    <p class= "item_text" >¥<%= item.price %></p>
    <p class= "item_link"><%= link_to '編 集', "/items/#{item.id}/edit", method: :get %></p>
    <p class= "item_link"><%= link_to '出品取消', "/items/#{item.id}", method: :delete %></p>
  
  <% end %>
  </div>

<%= render partial: "items/footer" %>